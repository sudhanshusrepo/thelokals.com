{
    "testRunner": {
        "args": {
            "$0": "jest",
            "config": "__tests__/e2e/mobile-client/config.json"
        },
        "jest": {
            "setupTimeout": 120000
        }
    },
    "apps": {
        "ios": {
            "type": "ios.app",
            "binaryPath": "apps/mobile-client/ios/build/Build/Products/Debug-iphonesimulator/Lokals.app",
            "build": "cd apps/mobile-client/ios && xcodebuild -workspace Lokals.xcworkspace -scheme Lokals -configuration Debug -sdk iphonesimulator -derivedDataPath ./build"
        },
        "android": {
            "type": "android.apk",
            "binaryPath": "apps/mobile-client/android/app/build/outputs/apk/debug/app-debug.apk",
            "build": "cd apps/mobile-client/android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildVariant=debug"
        }
    },
    "devices": {
        "simulator": {
            "type": "ios.simulator",
            "device": {
                "type": "iPhone 14"
            }
        },
        "emulator": {
            "type": "android.emulator",
            "device": {
                "avdName": "Pixel_5_API_31"
            }
        }
    },
    "configurations": {
        "ios.debug": {
            "device": "simulator",
            "app": "ios"
        },
        "android.debug": {
            "device": "emulator",
            "app": "android"
        }
    }
}