{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@thelocals/core": [
        "../core/index.ts"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../core"
    }
  ]
}