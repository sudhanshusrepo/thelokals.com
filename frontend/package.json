{
    "name": "thelokals-frontend",
    "version": "1.0.0",
    "private": true,
    "description": "TheLokals Frontend - Web and mobile applications",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev:web": "npm run dev --workspace=web-client",
        "build:web": "npm run build --workspace=web-client",
        "dev:mobile": "npm run start --workspace=mobile-client",
        "dev:provider": "npm run start --workspace=mobile-provider",
        "lint": "eslint .",
        "type-check": "tsc --noEmit"
    }
}