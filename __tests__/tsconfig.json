{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../tests-out",
        "rootDir": ".",
        "module": "commonjs",
        "target": "ES2019",
        "lib": [
            "ES2019",
            "DOM"
        ],
        "jsx": "react",
        "types": [
            "node",
            "@playwright/test"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "skipLibCheck": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}