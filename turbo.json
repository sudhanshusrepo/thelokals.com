{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ],
            "env": [
                "GEMINI_API_KEY",
                "POSTGRES_URL",
                "POSTGRES_PRISMA_URL",
                "POSTGRES_URL_NON_POOLING",
                "POSTGRES_PASSWORD",
                "VITE_SUPABASE_URL",
                "VITE_SUPABASE_ANON_KEY"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "outputs": [],
            "dependsOn": [
                "^build"
            ]
        },
        "lint": {
            "outputs": []
        },
        "type-check": {
            "outputs": [],
            "dependsOn": [
                "^build"
            ]
        }
    },
    "globalEnv": [
        "NEXT_PUBLIC_TEST_MODE",
        "NEXT_PUBLIC_ENABLE_OTP_BYPASS",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "VITE_TEST_MODE",
        "NODE_ENV"
    ]
}