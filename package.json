{
  "name": "thelocals-monorepo",
  "private": true,
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "npm run build:client",
    "build:turbo": "turbo run build",
    "test": "jest",
    "dev:client": "npm run dev --workspace=packages/client",
    "dev:provider": "npm run dev --workspace=packages/provider",
    "build:client": "npm run build --workspace=packages/client",
    "build:provider": "npm run build --workspace=packages/provider",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:functional": "playwright test tests/e2e/functional",
    "test:e2e:accessibility": "playwright test tests/e2e/accessibility",
    "test:e2e:integration": "playwright test tests/e2e/integration",
    "test:e2e:performance": "playwright test tests/e2e/performance",
    "test:e2e:chrome": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "db:migrate": "supabase db push",
    "prod": "npm run build:client",
    "lint": "eslint packages --ext .ts,.tsx"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supabase": "^2.65.7",
    "ts-jest": "^29.1.2",
    "turbo": "^2.6.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-compression": "^0.5.1"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@supabase/gotrue-js": "^2.84.0",
    "@supabase/supabase-js": "^2.84.0",
    "@tanstack/react-query": "^5.90.11",
    "@types/react-router-dom": "^5.3.3",
    "firebase": "^12.6.0",
    "lottie-react-native": "^7.3.4",
    "react-helmet": "^6.1.0",
    "react-loading-skeleton": "^3.5.0",
    "react-router-dom": "^7.9.6"
  },
  "overrides": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0"
  }
}