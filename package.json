{
  "name": "thelocals-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "backend",
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:turbo": "turbo run build",
    "pages:build": "node scripts/build-app.js web-client",
    "pages:build:client": "node scripts/build-app.js web-client",
    "pages:build:admin": "node scripts/build-app.js web-admin",
    "pages:build:provider": "node scripts/build-app.js web-provider",
    "pages:deploy:client": "npx wrangler pages deploy apps/web-client/.open-next --project-name web-client",
    "pages:deploy:admin": "npx wrangler pages deploy apps/web-admin/.open-next --project-name web-admin",
    "pages:deploy:provider": "npx wrangler pages deploy apps/web-provider/.open-next --project-name web-provider",
    "test": "jest",
    "dev:client": "npm run dev --workspace=web-client",
    "dev:provider": "npm run dev --workspace=web-provider",
    "dev:admin": "npm run dev --workspace=web-admin",
    "build:client": "node scripts/build-app.js web-client",
    "build:provider": "node scripts/build-app.js web-provider",
    "build:admin": "node scripts/build-app.js web-admin",
    "test:unit": "jest --coverage",
    "test:integration": "jest --testMatch='**/*.integration.test.ts'",
    "test:e2e": "node_modules/.bin/playwright test --config=playwright.config.js",
    "test:e2e:ui": "node_modules/.bin/playwright test --config=playwright.config.js --ui",
    "test:e2e:headed": "node_modules/.bin/playwright test --config=playwright.config.js --headed",
    "test:e2e:debug": "node_modules/.bin/playwright test --config=playwright.config.js --debug",
    "test:e2e:web-client": "node_modules/.bin/playwright test --config=playwright.config.js --project=chromium",
    "test:e2e:web-provider": "node_modules/.bin/playwright test --config=playwright.config.js --project=web-provider",
    "test:e2e:web-admin": "node_modules/.bin/playwright test --config=playwright.config.js --project=web-admin",
    "test:e2e:mobile-view": "node_modules/.bin/playwright test --config=playwright.config.js --project=chromium --device='iPhone 14'",
    "test:e2e:report": "node_modules/.bin/playwright show-report",
    "test:full": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "jest --coverage && playwright test --reporter=html",
    "test:bugs-list": "node scripts/generate-bugs-list.js",
    "setup:tests": "npm install && playwright install",
    "db:migrate": "supabase db push",
    "test:mobile": "npm run type-check --workspace=mobile-client",
    "prod": "npm run build:client",
    "lint": "eslint packages --ext .ts,.tsx"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@eslint/js": "^9.15.0",
    "@opennextjs/cloudflare": "^1.14.7",
    "@playwright/test": "^1.44.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supabase": "^1.169.0",
    "ts-jest": "^29.1.2",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-compression": "^0.5.1",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "@faker-js/faker": "^10.2.0",
    "@react-google-maps/api": "^2.20.8",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "pg": "^8.17.0",
    "react-loading-skeleton": "^3.5.0",
    "react-router-dom": "^6.28.0",
    "swr": "^2.3.8"
  },
  "overrides": {
    "rimraf": "^5.0.0",
    "glob": "^11.0.0",
    "whatwg-encoding": "^3.0.0",
    "@humanwhocodes/config-array": "^1.0.0",
    "inflight": "^1.0.6"
  }
}
